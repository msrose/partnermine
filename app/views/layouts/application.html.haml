%html
  %head
    %title= Partnermine
    = stylesheet_link_tag 'application', :media => 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .container
      .content
        - if flash.any?
          .row
            .span12
              - flash.each do |key, value|
                %div{ :class => "alert alert-#{key}" }= value
        .row
          .span12
            = yield

